<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="briva" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>BRI</label>
        <field id="active" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Enable</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/briva/active</config_path>
        </field>
        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Title</label>
            <config_path>payment/briva/title</config_path>
        </field>
        <field id="description" translate="label" type="textarea" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Description</label>
            <config_path>payment/briva/description</config_path>
        </field>
        <field id="min_order_total" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Minimum Order Total</label>
            <frontend_class>validate-zero-or-greater</frontend_class>
            <config_path>payment/briva/min_order_total</config_path>
        </field>
        <field id="max_order_total" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Maximum Order Total</label>
            <frontend_class>validate-zero-or-greater</frontend_class>
            <config_path>payment/briva/max_order_total</config_path>
        </field>
        <field id="currency" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Used for currencies</label>
            <config_path>payment/briva/currency</config_path>
            <comment>Separate by comma (,) - Empty is used for all currencies</comment>
        </field>
    </group>
</include>
